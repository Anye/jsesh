<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
    <SkipIfNotSupported/>
    <programGroup defaultName="JSesh" location="applications"/>
  
    <shortcut
        name="JSesh"
        programGroup="yes"
        desktop="yes"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\bin\jsesh.bat"
        description="JSesh hieroglyphic editor"
        iconFile="$INSTALL_PATH\icons\tksesh.ico"
        initialState="noShow"
    >
        <createForPack name="Base"/>
    </shortcut>
    <shortcut
        name="Sign Info Editor"
        programGroup="yes"
        desktop="yes"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH\bin\signInfoEditor.bat"
        description="Editor for documenting hieroglyphic signs"
    >
        <createForPack name="Base"/>
    </shortcut>       
</shortcuts>

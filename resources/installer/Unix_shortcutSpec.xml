<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>

  <programGroup defaultName="Jsesh" location="applications"/>


  <shortcut
     name="JSesh hieroglyphic editor"
     programGroup="yes"
     desktop="yes"
     startMenu="yes"
     startup="no"
     target="java"
	 commandLine="-Xmx256m -jar &quot;$INSTALL_PATH/libs/jsesh.jar&quot;"
     type="Application"
	 description="JSesh hieroglyphic editor"
	 iconFile="$INSTALL_PATH/icons/hibou.png"
	 encoding="UTF-8"
     > 
     <createForPack name="Base"/>
   </shortcut>
   
    <shortcut
     name="Sign info editor"
     programGroup="yes"
     desktop="yes"
     startMenu="yes"
     startup="no"
     target="$INSTALL_PATH/bin/signInfoEditor.sh"
     type="Application"
	 description="Sign info editor"
	 encoding="UTF-8"
     > 
     
     <createForPack name="Base"/>
   </shortcut>
   
   <shortcut
     name="JSesh_Documentation"
     programGroup="yes"
     desktop="yes"
     startMenu="yes"
     startup="no"
     type="Link"
     url="$INSTALL_PATH/jseshDoc.pdf"
	 encoding="UTF-8"
	 description="JSesh editor documentation"
     >
   </shortcut>
</shortcuts>
